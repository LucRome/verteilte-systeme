{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/src/backend"
            },
            "args": [
                "manage.py",
                "runserver"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Makemigrations",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/src/backend"
            },
            "args": [
                "manage.py",
                "makemigrations",
                "${input:appId}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Migrate",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/src/backend"
            },
            "args": [
                "manage.py",
                "migrate"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "appId",
            "type": "promptString",
            "description": "Name of the app",
            "default": "birthday_db",
            "password": false
        }
    ]
}